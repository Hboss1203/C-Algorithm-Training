class Solution {
public:
    string reverseStr(string s, int k) {
        for(int i = 0; i<s.size(); i+=(2*k))
        {
            if(i + k <= s.size())//对每隔2k个元素，前k个元素进行反转；
                reverse(s.begin() + i, s.begin() + i + k);
            else
                reverse(s.begin() + i, s.end());//最后剩下的不够k个，则全部反转。
        }
        return s;
    }
};
